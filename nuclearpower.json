{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Nuclear power is on a declining trend in France ",
    "font":"Montserrat, sans-serif",
    "anchor": "start",
    "subtitle": "Output, GWh | IEA via ECO-API",
    "fontSize": "17",
    "subtitleFontSize": "12",
    "color": "#000000",
    "subtitleColor": "#000000"
  },
  "height": 250,
  "width": "container",
  "autosize": {"type": "fit", "contains": "padding"},
  "background": "#FFF1E5",
  "view": {"fill": "#FFF1E5", "strokeOpacity": 0},

  "data": {
    "url": "https://api.economicsobservatory.com/fra/nGwh?vega",
    "format": {"type": "json"}
  },

  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {"title": "", "grid": false}
    }
  },

  "layer": [
    {
      "encoding": {
        "y": {
          "field": "value",
          "type": "quantitative",
          "axis": {"title": "", "grid": false}
        }
      },
      "layer": [
        {
          "mark": {
            "type": "line",
            "color": "#f4134d",
            "strokeWidth": 2
          }
        },
        {
          "transform": [{"filter": {"param": "hover", "empty": false}}],
          "mark": {
            "type": "point",
            "size": 80,
            "color": "#f4134d"
          }
        }
      ]
    },

    {
      "mark": {"type": "rule", "color": "#f4134d"},
      "encoding": {
        "opacity": {
          "condition": {"param": "hover", "empty":false,"value": 0.3},
          "value": 0
        },
        "tooltip": [
          {
            "field": "date",
            "type": "temporal",
            "title": "Year",
            "timeUnit": "year"
          },
          {
            "field": "value",
            "type": "quantitative",
            "title": "GWh",
            "format": ",.0f"
          }
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["date"],
            "nearest": true,
            "on": "pointerover",
            "clear": "pointerout"
          }
        }
      ]
    }
  ]
}